<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="JuegoAhorcado.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#f3dfc1">

    <Grid RowDefinitions=".6*,.4*">
        <VerticalStackLayout>

            <Label
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Text="Nro. Errores: 0 de 6" />
            <Image HeightRequest="200" Source="img0.png" />
            <Label
                FontSize="40"
                HorizontalOptions="Center"
                Text="_ _ C _ _"
                VerticalOptions="Center" />
            <Label
                FontSize="Large"
                HorizontalTextAlignment="Center"
                Text="Perdiste!" />
            <Button
                HorizontalOptions="Center"
                Text="Reiniciar"
                WidthRequest="100" />
        </VerticalStackLayout>
        <FlexLayout
            Grid.Row="1"
            JustifyContent="SpaceEvenly"
            Wrap="Wrap">
            <Button
                HeightRequest="50"
                Text="A"
                WidthRequest="50" />

        </FlexLayout>
    </Grid>

</ContentPage>
